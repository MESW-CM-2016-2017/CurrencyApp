<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Todo.TodoItemPage" Title="{Binding Quantity} + {Binding Symbol}">
	<StackLayout Margin="20" VerticalOptions="StartAndExpand">
		<Label Text="Value" />
		<Entry Text="{Binding Quantity}" />
        <Picker x:Name="Currency" SelectedItem="{Binding Symbol}" HorizontalOptions="FillAndExpand">
            <Picker.Items>
                <x:String>USD</x:String>
                <x:String>EUR</x:String>
                <x:String>JPY</x:String>
                <x:String>GBP</x:String>
                <x:String>CHF</x:String>
                <x:String>CNY</x:String>
                <x:String>SEK</x:String>
                <x:String>MXN</x:String>
                <x:String>NOK</x:String>
                <x:String>KRW</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Save" Clicked="OnSaveClicked" />
		<Button Text="Delete" Clicked="OnDeleteClicked" />
		<Button Text="Cancel" Clicked="OnCancelClicked" />
		<Button Text="Speak" Clicked="OnSpeakClicked" />
	</StackLayout>
</ContentPage>